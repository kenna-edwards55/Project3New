<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.project3new.WelcomeFragment"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome">
        <action
            android:id="@+id/action_welcomeFragment_to_questionFragment"
            app:destination="@id/questionFragment" />
        <argument
            android:name="numCorrect"
            android:defaultValue="-1"
            app:argType="integer"/>
        <argument
            android:name="numOutOf"
            android:defaultValue="-1"
            app:argType="integer" />
        <argument
            android:name="operationWelcome"
            android:defaultValue="addition"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/questionFragment"
        android:name="com.example.project3new.QuestionFragment"
        android:label="fragment_question"
        tools:layout="@layout/fragment_question" >
        <action
            android:id="@+id/action_questionFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment">
        </action>
        <argument
            android:name="difficulty"
            app:argType="string" />
        <argument
            android:name="operation"
            app:argType="string" />
        <argument
            android:name="numQuestions"
            app:argType="integer" />
    </fragment>
